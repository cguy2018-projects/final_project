<!-- Validation failure messages -->
<% if @posting.errors.any? %>
  <% @posting.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Posting</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_posting" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

    <!-- Hidden input for author name -->
            <input name="user_id" type="hidden" value="<%= current_user.id %>">

      <!-- Label and input for item_id -->
      <div class="form-group">
        <label for="item" class="control-label">
          Article/Podcast
        </label>

        <input type="text" id="item" name="item`" placeholder="Paste Link Here" class="form-control" value="<%= @posting.item %>">
      </div>
    

      <button class="btn btn-success">
        Create Posting
      </button>
      or
      <a href="/postings">Cancel</a>
    </form>
  </div>
</div>
