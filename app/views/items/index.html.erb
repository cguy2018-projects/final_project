<div class="page-header">
  <h1>
    Items
    <a href="/items/new" class="btn btn-sm btn-success">New Item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th>Comments</th>
        <th>Tagline</th>
        <th>Actions</th>
      </tr>

      <% @items.each do |item| %>
      <tr>
        <td> <a href="<%= item.url %>" target="_blank" class="text-success"> 
          <%= item.name %>
        </a>
        </td>
        <td><%= item.url %></td>
        <td><%= item.comment %></td>
        <td><%= item.tagline %></td>
        <td>
          <a href="/items/<%= item.id %>" class="btn-sm btn-danger">Show</a>
          <a href="/items/<%= item.id %>/edit" class="btn-sm btn-warning">Edit</a>
          <a href="/delete_item/<%= item.id %>" class="btn-sm btn-primary" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
