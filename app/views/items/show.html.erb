<div class="page-header">
  <h3>Item #<%= @item.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @item.name %></dd>

      <dt>Url</dt>
      <dd><%= @item.url %></dd>

      <dt>Comment</dt>
      <dd><%= @item.comment %></dd>

      <dt>Tagline</dt>
      <dd><%= @item.tagline %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/items" class="btn btn-danger">
        Back
      </a>
      <a href="/items/<%= @item.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_item/<%= @item.id %>" class="btn btn-primary" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
