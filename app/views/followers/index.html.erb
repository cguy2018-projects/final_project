<div class="page-header">
  <h1>
    <a href="/followers/new" class="btn btn-lg btn-success">Follow Someone</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @followers.each do |follower| %>
      <tr>
        <td><%= follower.user_id %></td>
        <td>
          <a href="/followers/<%= follower.id %>" class="btn-sm btn-danger">Show</a>
          <a href="/followers/<%= follower.id %>/edit" class="btn-sm btn-warning">Edit</a>
          <a href="/delete_follower/<%= follower.id %>" class="btn-sm btn-primary" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
