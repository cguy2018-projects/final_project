<div class="page-header">
  <h1>
    <a href="/followers/new" class="btn btn-lg btn-success">Follow Someone</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>People I'm Following</th>
        <th></th>
      </tr>

      <% @followers.each do |follower| %>
      <tr>
        <td> <a href="/users/<%= follower.user_id %>" class="text-success"> 
          <%= follower.user.username %>
          </a> 
        </td>
        <td>
          <a href="/followers/<%= follower.id %>" class="btn-sm btn-danger">User's Posts</a>
          <a href="/delete_follower/<%= follower.id %>" class="btn-sm btn-primary" rel="nofollow">Unfollow</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
